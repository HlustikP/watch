{
  "name": "@hrwg/watch-together",
  "private": true,
  "version": "1.0.0",
  "description": "Platform to watch videos together with friends",
  "main": "server.js",
  "scripts": {
    "start": "pm2-dev start ecosystem.config.js",
    "production": "pm2 start ecosystem.config.js --env production",
    "build": "npm run build:server && npm run build:client",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/server/index.js --outDir dist/server",
    "deploy": "pm2 deploy production"
  },
  "keywords": [
    "watchtogether",
    "videos",
    "youtube",
    "dailymotion",
    "websockets",
    "vue"
  ],
  "author": {
    "name": "Rico Herwig",
    "email": "rherwig4711@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "@vitejs/plugin-vue": "^1.9.1",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "pm2": "^5.1.2",
    "postcss": "^8.3.0",
    "sass": "^1.33.0",
    "tailwindcss": "^2.2.15",
    "vite": "^2.3.3"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@vue/server-renderer": "^3.2.17",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cross-fetch": "^3.1.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mongoose": "^6.0.8",
    "serve-static": "^1.14.1",
    "socket.io": "^4.2.0",
    "socket.io-client": "^4.2.0",
    "unique-names-generator": "^4.6.0",
    "vue": "^3.2.17",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2"
  }
}
